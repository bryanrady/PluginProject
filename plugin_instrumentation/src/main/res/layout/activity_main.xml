<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/main"
        android:scaleType="centerCrop"/>

    <Button
        android:id="@+id/btn_jumpSecond"
        android:layout_above="@+id/btn_startService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="跳转界面" />

    <Button
        android:id="@+id/btn_startService"
        android:layout_above="@+id/btn_sendDynamicReceiver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="开启服务" />

    <Button
        android:id="@+id/btn_sendDynamicReceiver"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="动态注册并发送广播" />

</RelativeLayout>
